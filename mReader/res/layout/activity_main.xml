<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:attr="http://schemas.android.com/apk/res/com.sun.mreader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <com.sun.mreader.ui.BookGridView
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_list_bg"
        android:cacheColorHint="@android:color/transparent"
        android:columnWidth="90.0dip"
        android:fadingEdge="none"
        android:fadingEdgeLength="0.0dip"
        android:gravity="center_horizontal"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:scrollingCache="false"
        attr:shelfLayerAdvertiseHeight="0.0dip"
        attr:shelfLayerCenter="@drawable/bookshelf_layer_center"
        attr:shelfLayerHeadHeight="48.0dip"
        attr:shelfLayerLeft="@drawable/bookshelf_layer_left"
        attr:shelfLayerRight="@drawable/bookshelf_layer_right" />

</RelativeLayout>